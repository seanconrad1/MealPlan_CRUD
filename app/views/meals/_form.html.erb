
<% if @meal.errors.any? %>
<% @meal.errors.full_messages.each do |error| %>
  <%= error %>
  <% end %>
<% end %>





<%= form_for @meal do |f| %>

  <%= f.label "Meal Name" %>
  <%= f.text_field :name %><br>

  <%= f.label "Is it Health?" %>
  <%= f.check_box :healthy %><br>

  <%= f.collection_select :person_id, Person.all, :id, :name %><br>

  <%= f.submit %>

<% end %>
